<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <label class="checkbox toggle candy" onclick="">
      <%= f.check_box :home %>
      <p>
        <span>Home</span>
        <span>&nbsp;</span>
      </p>
      <a class="slide-button"></a>
    </label>
  </div>
  <div class="field">
    <label class="checkbox toggle candy" onclick="">
      <%= f.check_box :enabled %>
      <p>
        <span>Enable</span>
        <span>&nbsp;</span>
      </p>
      <a class="slide-button"></a>
    </label>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
