	<script src="dist/html5shiv.js"></script>
	<![endif]-->
</head>
<body>
	<div class="container">
		<header>
			<img src="<%= image_path "logo.png" %>" alt="ML Bootstrap Template">
			<h1>School Website</h1>
		</header>

		<%= render "layouts/top_menu" %>

		<%= render "layouts/notices" %>

		<div class="row">
			<div class="span8">
				<div class="content-inner">
					<%= yield %>
				</div>
			</div>

			<div class="span4">
				<div class="content-inner">
