<div class="thumbnail">
  <%= image_tag news_item.image.url unless news_item.image.url == "/images/original/missing.png" %>
  <div class="caption">
    <h3><%= news_item.title %></h3>
    <p><%= news_item.body %></p>
    <p><%= link_to "Read more", news_item_path(news_item.id), class: "btn btn-primary" %></p>
  </div>
</div>