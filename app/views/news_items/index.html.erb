<h1>All News Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Featured</th>
      <th>Enabled</th>
      <th>Feature image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @news_items.each do |news_item| %>
      <tr>
        <td><%= news_item.title %></td>
        <td><%= news_item.body %></td>
        <td>
          <%= image_tag "icons/#{news_item.featured? ? 'tick' : 'cross'}.png" %>
        </td>
        <td>
          <%= image_tag "icons/#{news_item.enabled? ? 'tick' : 'cross'}.png" %>
        </td>
        <td><%= news_item.feature_image %></td>
        <td><%= link_to 'Show', news_item %></td>
        <td><%= link_to 'Edit', edit_news_item_path(news_item) %></td>
        <td><%= link_to 'Destroy', news_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News item', new_news_item_path %>
